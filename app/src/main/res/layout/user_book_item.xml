<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_marginTop="1dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#fff">
    <androidx.cardview.widget.CardView  android:gravity="center" android:id="@+id/card1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp" app:cardCornerRadius="10dp" app:cardElevation="8dp" android:background="#fff">
        <LinearLayout  android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout   android:background="#FFFFFF" android:orientation="horizontal" android:id="@+id/linear_layout" android:layout_width="match_parent" android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/book_image"
                    android:src="@drawable/userphoto"
                    android:scaleType="fitXY"
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp" />

                <LinearLayout   android:background="#FFFFFF" android:orientation="vertical"  android:layout_width="match_parent" android:layout_height="match_parent" >
                    <TextView android:id="@+id/book_name" android:textStyle="bold" android:layout_gravity="center_vertical" android:fontFamily="@font/scada" android:layout_marginLeft="10dp" android:text="BOOK NAME" android:textSize="18sp"  android:textColor="@color/colorPrimaryDark"  android:gravity="center"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="15dp" android:maxLines="2"/>

                    <TextView android:id="@+id/data_time"  android:textStyle="italic" android:layout_gravity="center_vertical" android:fontFamily="@font/scada" android:layout_marginLeft="10dp" android:text="Date/Time" android:textSize="15sp"  android:textColor="@color/colorPrimaryDark"  android:gravity="center"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="15dp"/>

                </LinearLayout>



            </LinearLayout>

            <androidx.cardview.widget.CardView android:visibility="visible" app:cardCornerRadius="0dp" android:layout_gravity="center" android:id="@+id/mark_as_swap_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/relative_layout" android:background="@color/colorPrimary" >
                <LinearLayout
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mark_as_swap"
                        android:drawableLeft="@drawable/ic_swap"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/scada"
                        android:text="Mark as Swap"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:drawableStart="@drawable/ic_swap" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
